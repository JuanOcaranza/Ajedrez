        <Button x:Name="d4" Grid.Column="3" Grid.Row="4" Background="{Binding ColorCasillasNegras}"/>
        <Button x:Name="d3" Grid.Column="3" Grid.Row="5" Background="{Binding ColorCasillasBlancas}"/>
